<% unless @order.line_items.empty? || @response.nil? -%>
  <div id='google_checkout_button'>
    <form method="POST" action="https://sandbox.google.com/checkout/api/checkout/v2/checkout/Merchant/<%=@gc_configuration[:merchant_id]%>">
      <%= hidden_field_tag :cart, "#{Base64.b64encode(@response)}"%>
      <%= hidden_field_tag :signature, "#{signature(@response, @gc_configuration[:merchant_key])}"%>
      <input type="image" name="Google Checkout" alt="Fast checkout through Google" height="46" width="180" src="http://sandbox.google.com/checkout/buttons/checkout.gif?merchant_id=<%=@gc_configuration[:merchant_id]%>&w=180&h=46&style=white&variant=text&loc=en_US" >
    </form>
  </div>
<% end %>	 
